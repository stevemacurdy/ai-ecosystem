# NEVER commit .env to Git!

# =============================================================================
# OPENAI
# =============================================================================
OPENAI_API_KEY=sk-proj-...

# =============================================================================
# ODOO (ERP Integration)
# =============================================================================
ODOO_URL=https://your-company.odoo.com/odoo
ODOO_DB=Your Database Name
ODOO_LOGIN=your-email@company.com
ODOO_API_KEY=your-odoo-api-key-here

# =============================================================================
# GMAIL (Email Integration)
# =============================================================================
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=

# =============================================================================
# GOOGLE DRIVE (Document Storage)
# =============================================================================
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REFRESH_TOKEN=

# =============================================================================
# AWS S3 (File Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=ai-ecosystem-dev

# =============================================================================
# STRIPE (Payments for SellPronto)
# =============================================================================
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# =============================================================================
# EBAY (SellPronto Integration)
# =============================================================================
EBAY_APP_ID=
EBAY_DEV_ID=
EBAY_CERT_ID=
EBAY_OAUTH_TOKEN=
EBAY_REFRESH_TOKEN=
EBAY_ENVIRONMENT=sandbox  # or production

# =============================================================================
# FACEBOOK MARKETPLACE (SellPronto Integration)
# =============================================================================
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=

# =============================================================================
# AIRBNB (STR Agent Integration)
# =============================================================================
AIRBNB_API_KEY=
AIRBNB_API_SECRET=

# =============================================================================
# TWILIO (SMS Notifications)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+1234567890
SMS_RECIPIENT_PRIMARY=+18016881745
SMS_RECIPIENT_SECONDARY=+14354961483

# =============================================================================
# DATABASE (Docker Compose provides these for local dev)
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/ai_ecosystem_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# =============================================================================
# REDIS (Docker Compose provides these for local dev)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# CELERY (Async Task Queue)
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_ALWAYS_EAGER=false

# =============================================================================
# MONITORING (Production)
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WEB_SEARCH=true
ENABLE_AGENT_CREATOR=false
ENABLE_SELLPRONTO=false
ENABLE_STR_AGENT=false
ENABLE_MARKETING_AGENT=false
ENABLE_SALES_AGENT=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# EMAIL (SMTP for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@woulfgroup.com

# =============================================================================
# FRONTEND (Next.js)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=AI Ecosystem
NEXT_PUBLIC_APP_VERSION=0.1.0
